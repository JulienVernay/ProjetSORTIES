{% extends 'base.html.twig' %}

{% block title %}{{ "Créer une sortie"}}{% endblock %}

{% block body %}
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-md-auto">

			<div
					class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
				<h2>Créer une sortie</h2>
			</div>
		</div>
	</div>
		{{ form_start(sortieForm) }}
	<div class="row">
		<div class="input-group col-md-2">
				{{ form_label(sortieForm.name)}}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.name) }}
			</div>

		<div class="input-group col-md-2">
			{{ form_label(sortieForm.site) }}
		</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.site) }}
			</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.startingDateTime) }}
			</div>
			<div class="input-group col-md-4">
			{{ form_widget(sortieForm.startingDateTime) }}
		</div>

			<div class="input-group col-md-2">
				{{ form_label(sortieForm.city) }}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.city) }}
			</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
				{{ form_label(sortieForm.inscriptionDeadLine) }}
				</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.inscriptionDeadLine) }}
			</div>

			<div class="form-group col-md-2">
				{{ form_label(sortieForm.location) }}
			</div>
				<div class="input-group col-md-4">
					{{ form_widget(sortieForm.location) }}
				</div>

		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
				{{ form_label(sortieForm.nbMaxRegistration) }}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.nbMaxRegistration) }}
			</div>

		<div class="col">
			{{ form_label(sortieForm.street) }}
		</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.street) }}
			</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.duration) }}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.duration) }}
				<select name="duration" id="duration">
					<option value="">Choisir durée</option>
					<option value="minute">Minutes</option>
					<option value="heure">Heures</option>
					<option value="journée">Journées</option>
					<option value="week-end">Week-end</option>
					<option value="semaine">Semaine</option>
				</select>

			</div>

		<div class="col">
			{{ form_label(sortieForm.zipCode) }}
		</div>
		<div class="input-group col-md-4">
			{{ form_widget(sortieForm.zipCode) }}
		</div>
	</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.eventDetails) }}
			</div>
			<div class="input-group col-md-4">
			{{ form_widget(sortieForm.eventDetails) }}
		</div>

		</div>
			</div>
	<div class="row justify-content-md-center mt-3">
		<div class="input-group col-md-4">
			<div>
				<button class="btn btn-outline-info" type="submit" name="envoyer" value="enregistrer">Enregistrer</button>
				<button class="btn btn-info" type="submit" name="envoyer" value="publier">Publier</button>
				<a class="btn btn-outline-danger" href="{{ path('index') }}">Retour</a>
			</div>
					{{  form_end(sortieForm) }}
		</div>
	</div>

{% endblock %}