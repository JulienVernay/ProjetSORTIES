{% extends 'base.html.twig' %}

{% block title %}{{ "Créer une sortie"}}{% endblock %}

{% block body %}
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-md-auto">

			<div
					class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
				<h2>Créer une sortie</h2>
			</div>
		</div>
	</div>
		{{ form_start(sortieForm) }}
	<div class="row">
		<div class="input-group col-md-2">
				{{ form_label(sortieForm.name)}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.name) }}
			</div>

		<div class="input-group col-md-2">
			<label for="campus">Campus :</label>
		</div>
			<div class="input-group col-md-4">
				<select class="form-control" maxlength="30" id="ville" name="ville">
				</select>
			</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.startingDateTime) }}
			</div>
			<div class="input-group col-md-4">
			{{ form_widget(sortieForm.startingDateTime) }}
		</div>

			<div class="input-group col-md-2">
				<label for="ville">Ville :</label>
			</div>
			<div class="input-group col-md-4">
				<select class="form-control" maxlength="30" id="ville" name="ville">
				</select>
			</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
				{{ form_label(sortieForm.inscriptionDeadLine) }}
				</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.inscriptionDeadLine) }}
			</div>

			<div class="form-group col-md-2">
				{{ form_label(sortieForm.location) }}
			</div>
				<div class="input-group col-md-4">
					{{ form_widget(sortieForm.location) }}
				</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
				{{ form_label(sortieForm.nbMaxRegistration) }}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.nbMaxRegistration) }}
			</div>

		<div class="col">
			<label for="rue">Rue :</label>
		</div>
			</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.duration) }}
			</div>
			<div class="input-group col-md-4">
				{{ form_widget(sortieForm.duration) }}
			</div>

		<div class="col">
			<label for="city">Ville :</label>
				</div>
		</div> <br>

		<div class="row">
			<div class="input-group col-md-2">
			{{ form_label(sortieForm.eventDetails) }}
			</div>
			<div class="input-group col-md-4">
			{{ form_widget(sortieForm.eventDetails) }}
		</div>

			<div class="col">
				<label for="cp">Code postal :</label>
			</div>
		</div> <br>

		</div>
			</div>
				</div>
	<div class="row justify-content-md-center mt-3">
		<div class="input-group col-md-3">
					{{  form_end(sortieForm) }}
		</div>
	</div>
			</div>
		</div>
	</div>
{% endblock %}
