{% extends 'base.html.twig' %}

{% block title %}Modifier Profil{% endblock %}

{% block body %}
    <h1>Modifier profil de {{ app.user.username }}</h1>

    <div class="row justify-content-md-center">
        {{ form_start(userForm)}}
        <div class="form-group row">
            <div class="col-6">
                <label for="username">Pseudo :</label>
            </div>
            <div class="col-4" id="username">
                {{ form_widget(userForm.username) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="username">Prénom :</label>
            </div>
            <div class="col-4">
                {{ form_widget(userForm.firstName) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="username">Nom :</label>
            </div>
            <div class="col-4">
                {{ form_widget(userForm.lastName) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="username">Email :</label>
            </div>
            <div class="col-4">
                {{ form_widget(userForm.mail) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="username">Téléphone :</label>
            </div>
            <div class="col-4">
                {{ form_widget(userForm.phone) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label for="username">Campus :</label>
            </div>
            <div class="col-4">
                {{ form_widget(userForm.campus) }}
            </div>
        </div>

        <div class="row form-group justify-content-md-center">
            <div class="col-6">
                {{ form_widget(userForm.password) }}
            </div>
        </div>

    </div>
    <div class="row justify-content-md-center">
        <button class="col-1 btn btn-outline-info" type="submit" name="rechercher">Enregistrer</button>
        <a class="col-1 btn btn-outline-secondary"
           href="{{ url('user_profile', {"id": app.user.id}) }}" role="button">Annuler</a>
    </div>
    {{ form_end(userForm) }}


{% endblock %}
