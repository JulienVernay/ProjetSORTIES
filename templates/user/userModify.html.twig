{% extends 'base.html.twig' %}

{% block title %}Modifier Profil{% endblock %}

{% block body %}
    <div class="container">
        <div class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1>Modifier profil de {{ app.user.username }}</h1>
        </div>
        {{ form_start(userForm)}}
        <div class="row justify-content-md-center">


            <div class="row col-md-6">

                <div class="form-group col-md-6">
                    <label for="username">Pseudo :</label>
                </div>
                <div class="col-6" id="firstName">
                    {{ form_widget(userForm.username) }}
                </div>



                <div class="form-group col-md-6">
                    <label for="firstName">Prénom :</label>
                </div>
                <div class="col-6" id="firstName">
                    {{ form_widget(userForm.firstName) }}
                </div>


                <div class="form-group col-md-6">
                    <label for="lastName">Nom :</label>
                </div>
                <div class="col-4" id="lastName">
                    {{ form_widget(userForm.lastName) }}
                </div>


                <div class="form-group col-md-6">
                    <label for="mail">Email :</label>
                </div>
                <div class="col-4" id="mail">
                    {{ form_widget(userForm.mail) }}
                </div>


                <div class="form-group col-md-6">
                    <label for="phone">Téléphone :</label>
                </div>
                <div class="col-4" id="phone">
                    {{ form_widget(userForm.phone) }}
                </div>


                <div class="form-group col-md-6">
                    <label for="campus">Campus :</label>
                </div>
                <div class="col-4" id="campus">
                    {{ form_widget(userForm.campus) }}
                </div>

                <div class="form-group col-md-4">
                    {{ form_widget(userForm.password) }}
                </div>
            </div>
            <div class="row col-md-4">
                <div class="float-right">
                    <img src="{{ asset('uploads/photo/') }}{{ app.user.imageFileName }}" class="rounded" alt="Pas de photo à afficher" width="150">
                    <div class="row form-group">
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Choisir une photo</label>
                            <div class="form-control" type="file" id="formFile">
                                {{ form_row(userForm.imageFile) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-md-center">
            <button class="col-1 btn btn-outline-info" type="submit" name="rechercher">Enregistrer</button>
            <a class="col-1 btn btn-outline-secondary"
               href="{{ url('user_profile', {"id": app.user.id}) }}" role="button">Annuler</a>
        </div>
        {{ form_end(userForm) }}

    </div>
{% endblock %}
