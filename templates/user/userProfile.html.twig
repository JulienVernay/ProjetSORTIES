{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container">

    <div class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h3>Profil de {{ user.username }}</h3>
    </div>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img src="{{ asset('uploads/photo/') }}{{ user.imageFileName }}" class="img-radius" alt="Pas de photo Ã  afficher" width="75px">
                                    </div>
                                    <h6 class="f-w-600">{{ user.username }}</h6>
                                    <p>{{ user.active }}</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Nom</p>
                                            <h6 class="text-muted f-w-400">{{user.lastName}}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Prenom</p>
                                            <h6 class="text-muted f-w-400">{{ user.firstName }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Pseudo</p>
                                            <h6 class="text-muted f-w-400">{{ user.username }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Telephone</p>
                                            <h6 class="text-muted f-w-400">{{ user.phone }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">E-Mail</p>
                                            <h6 class="text-muted f-w-400">{{ user.mail }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Campus</p>
                                            <h6 class="text-muted f-w-400">{{ user.campus }}</h6>
                                        </div>
                                    </div>
                                    {% if app.user.id == user.id %}
                                        <a class="btn btn-lg btn-outline-primary" href="{{ url('user_modify', {"id": user.id}) }}" role="button">Modifier</a>
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}