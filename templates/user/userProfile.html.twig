{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container">

        <div class=" pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h3>Profil de {{ user.username }}</h3>
        </div>

        <div class="row justify-content-md-center">
            <div class="row col-md-4">
                <div class="float-left">
                    <img src="{{ asset('uploads/photo/') }}{{ user.imageFileName }}" class="rounded-circle border-left-0 border border-dark" alt="Pas de photo à afficher" width="150">
                </div>
            </div>

            <div class="row col-md-4">
                <div class="form-group col-md-8">
                    <label for="prenom">Prénom :</label>
                </div>
                <p id="prenom">{{ user.firstname }}</p>

                <div class="form-group col-md-8">
                    <label for="nom">Nom :</label>
                </div>
                <p id="nom">{{ user.lastName }}</p>

                <div class="form-group col-md-8">
                    <label for="phone">Téléphone :</label>
                </div>
                <p id="phone">{{ user.phone }}</p>

                <div class="form-group col-md-8">
                    <label for="mail">Email :</label>
                </div>
                <p id="mail">{{ app.user.mail }}</p>

                <div class="form-group col-md-8">
                    <label for="campus">Campus :</label>
                </div>
                <p id="campus">{{ user.campus }}</p>
            </div>

            <div class="form-group col-md-6 text-center">
                {% if app.user.id == user.id %}
                    <a class="btn btn-lg btn-outline-primary" href="{{ url('user_modify', {"id": user.id}) }}" role="button">Modifier</a>
                {% endif %}
            </div>
        </div>
    </div>



{% endblock %}